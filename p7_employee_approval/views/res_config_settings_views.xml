<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit_employee" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.employee</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        <!-- Boolean to configure in settings for approvals needed or not -->
            <xpath expr="//div[hasclass('app_settings_block')]/div[@name='employees_setting_container']/div[@id='presence_control_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="allow_company_wise_control_for_mail">
                    <div class="o_setting_left_pane">
                        <field name="send_mail_for_employee_approvals"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="send_mail_for_employee_approvals"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    </data>
</odoo>