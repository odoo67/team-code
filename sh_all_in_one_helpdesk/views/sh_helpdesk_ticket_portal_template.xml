          <div class="mb-3 col-6">
            <div class="row">
              <div class="col-6">
                <strong>Ticket Type</strong>
              </div>
              <div class="col-6">
                <span t-field="helpdesk_ticket.ticket_type"/>
              </div>
            </div>
          </div>
          <div class="mb-3 col-6">
            <div class="row">
              <div class="col-6">
                <strong>Create Date</strong>
              </div>
              <div class="col-6">
                <span t-field="helpdesk_ticket.create_date"/>
