                    <div class="col-6">
                      <label class="control-label" for="partner">Partner:</label>
                      <input class="form-control" list="partner_ids" name="partner" id="partner"/>
                      <input type="hidden" name="partner_id" id="partner_id"/>
                      <datalist id="partner_ids"/>
                    </div>
                  </div>
                </t>
                <t t-if="request.env.user.sh_portal_user_access and request.env.user.sh_portal_user_access=='user'">
