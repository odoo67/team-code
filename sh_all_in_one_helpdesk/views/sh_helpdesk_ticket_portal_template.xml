                <div class="col-6">
                  <span t-field="helpdesk_ticket.sub_category_id"/>
                </div>
              </div>
            </div>
          </div>
        </t>
        <t t-if="helpdesk_ticket.comment">
          <div class="row">
            <div class="mb-3 col-12">
              <strong>Closed Comment</strong>
            </div>
          </div>
          <div class="row">
            <div class="mb-3 col-12">
              <span t-field="helpdesk_ticket.comment"/>
            </div>
          </div>
        </t>
        <t t-if="helpdesk_ticket.description">
          <div class="row">
            <div class="mb-3 col-12">
              <strong>Description</strong>
            </div>
          </div>
          <div class="row">
            <div class="mb-3 col-12">
              <span t-field="helpdesk_ticket.description"/>
            </div>
          </div>
        </t>
        <t t-if="helpdesk_ticket.priority_new and helpdesk_ticket.customer_comment">
          <div class="row">
            <div class="mb-3 col-6">
              <div class="row">
                <div class="col-6">
                  <strong>Customer Rating</strong>
                </div>
                <div class="col-6">
                  <span class="float-right" title="Rating" role="img" t-attf-aria-label="Rating: #{helpdesk_ticket.priority_new} on 3">
                    <t t-foreach="range(2, 7)" t-as="i">
                      <span t-attf-class="fa fa-lg fa-star#{'' if i &lt;= int(helpdesk_ticket.priority_new) else '-o'}"/>
                    </t>
                  </span>
                </div>
              </div>
            </div>
            <div class="mb-3 col-6">
              <div class="row">
                <div class="col-6">
                  <strong>Customer Comment</strong>
                </div>
                <div class="col-6">
                  <span t-field="helpdesk_ticket.customer_comment"/>
                </div>
              </div>
            </div>
          </div>
        </t>
      </div>
    </div>
  </template>
