                          </option>
                        </t>
                      </select>
                    </div>
                  </div>
                  <div class="col-6">
                    <div t-attf-class="form-group">
                      <label class="control-label" for="portal_location">Location</label>
                      <select class="form-control form-field o_website_form_required_custom" id="portal_location" name="portal_location">
                          <option value="">Select location</option>
                          <t t-foreach="request.env['sh.helpdesk.location'].sudo().search([])" t-as="location">
                              <option t-att-value="location.id">
                                  <t t-esc="location.location"/>
