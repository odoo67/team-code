                <div class="col-6">
                  <span t-field="helpdesk_ticket.sub_category_id"/>
                </div>
              </div>
            </div>
          </div>
        </t>
        <t t-if="request.env.company.category and request.env.company.sub_category">
          <div class="row">
            <div class="mb-3 col-6">
              <div class="row">
                <div class="col-6">
                  <strong>Category</strong>
                </div>
                <div class="col-6">
                  <span t-field="helpdesk_ticket.category_id"/>
                </div>
              </div>
            </div>
            <div class="mb-3 col-6">
              <div class="row">
                <div class="col-6">
                  <strong>Sub Category</strong>
