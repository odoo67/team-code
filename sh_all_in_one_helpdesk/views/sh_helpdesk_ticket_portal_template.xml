                <div class="col-6">
                  <span t-field="helpdesk_ticket.category_id"/>
                </div>
              </div>
            </div>
          </div>
        </t>
        <t t-if="not request.env.company.category and request.env.company.sub_category">
          <div class="row">
            <div class="mb-3 col-6">
              <div class="row">
                <div class="col-6">
