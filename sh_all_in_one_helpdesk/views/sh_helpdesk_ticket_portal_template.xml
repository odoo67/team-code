                <div class="row" style="text-align: right;">
                  <div class="col-12">
                    <button type="submit" id="create_sh_helpdesk_ticket" class="btn btn-primary">Create Ticket</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </t>
  </template>
  <template id="portal_ticket_page" name="Ticket Portal Template" inherit_id="portal.portal_sidebar" primary="True">
    <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
      <div class="row mt16 o_portal_ticket_sidebar">
        <t t-call="portal.portal_record_sidebar">
          <t t-set="classes" t-value="'col-12 col-lg flex-lg-grow-0 d-print-none'"/>
          <t t-set="title">
            <h2 class="mb-0">
              <b t-if="helpdesk_ticket" t-field="helpdesk_ticket.name"/>
              <b t-else="" t-field="helpdesk_ticket.name"/>
            </h2>
          </t>
          <t t-set="entries">
            <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
              <li class="list-group-item flex-grow-1">
                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                  <div class="btn-group flex-grow-1 mr-1 mb-1">
                    <a class="btn btn-secondary btn-block o_download_btn" t-att-href="helpdesk_ticket.get_portal_url(report_type='pdf', download=True)" title="Download">
                      Download
                      <i class="fa fa-download"/>
                    </a>
                  </div>
                </div>
              </li>
              <li t-if="helpdesk_ticket.user_id" class="list-group-item flex-grow-1">
                <div class="small mb-1">
                  <strong class="text-muted">Your Contact</strong>
                </div>
                <div class="row">
                  <div class="col flex-grow-0 pr-2">
                    <img t-if="helpdesk_ticket.user_id.image_128" class="rounded-circle mt-1 o_portal_contact_img" t-att-src="image_data_uri(helpdesk_ticket.user_id.image_128)" alt="Contact"/>
                    <img t-else="" class="rounded-circle mt-1 o_portal_contact_img" src="/web/static/src/img/user_menu_avatar.png" alt="Contact"/>
                  </div>
                  <div class="col pl-0" style="min-width: 150px;">
                    <span t-field="helpdesk_ticket.user_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True}"/>
                    <a href="#discussion" class="small">
                      Send message
                      <i class="fa fa-comment"/>
                    </a>
                  </div>
                </div>
              </li>
            </ul>
          </t>
        </t>
        <div id="ticket_content" class="col-12 col-lg justify-content-end">
          <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}">
            <div t-call="sh_all_in_one_helpdesk.sh_helpdesk_ticket_portal_content"/>
          </div>
          <div id="ticket_communication" class="mt-4">
            <h2>History</h2>
            <t t-call="portal.message_thread">
              <t t-set="object" t-value="helpdesk_ticket"/>
            </t>
          </div>
        </div>
      </div>
    </xpath>
  </template>
  <template id="sh_helpdesk_ticket_portal_content" name="Helpdesk Ticket Portal Content">
    <div id="introduction" t-attf-class="pb-2 pt-3 #{'card-header bg-white' if report_type == 'html' else ''}">
      <h2 class="my-0">
        <strong>
          <em t-esc="helpdesk_ticket.name"/>
        </strong>
      </h2>
    </div>
