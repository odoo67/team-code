    <record id="employee_thanks" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/employee-thank-you</field>
        <field name="website_published">True</field>
        <field name="key">sh_all_in_one_helpdesk.employee_thanks</field>
        <field name="arch" type="xml">
            <t name="Thanks" t-name="sh_all_in_one_helpdesk.employee_thanks">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="container">
                            <h1>Thanks!</h1>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="alert alert-success" role="status">
                                        Your message has been sent successfully.
                                    </div>
                                    <p>
                                        We will get back to you shortly.
